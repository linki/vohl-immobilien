<% title "Seitenübersicht" %>

<table>
  <tr>
    <th>Name</th>
    <th>Permalink</th>
    <th>Content</th>
  </tr>
  <% for page in @pages %>
    <tr>
      <td><%=h page.name %></td>
      <td><%=h page.permalink %></td>
      <td><%=h truncate(page.content, 200) %></td>
      <td><%= link_to "Anzeigen", page %></td>
      <td><%= link_to "Editieren", edit_page_path(page) %></td>
      <td><%= link_to "Löschen", page, :confirm => 'Sind Sie sich sicher?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "Neue Seite erstellen", new_page_path %></p>
