<%% title "<%= plural_name.titleize %>" %>

<table>
  <tr>
  <%- for attribute in attributes -%>
    <th><%= attribute.column.human_name.titleize %></th>
  <%- end -%>
  </tr>
  <%% for <%= singular_name %> in @<%= plural_name %> %>
    <tr>
    <%- for attribute in attributes -%>
      <td><%%=h <%= singular_name %>.<%= attribute.name %> %></td>
    <%- end -%>
    <%- if action? :show -%>
      <td><%%= link_to "Anzeigen", <%= singular_name %> %></td>
    <%- end -%>
    <%- if action? :edit -%>
      <td><%%= link_to "Bearbeiten", edit_<%= singular_name %>_path(<%= singular_name %>) %></td>
    <%- end -%>
    <%- if action? :destroy -%>
      <td><%%= link_to_delete "LÃ¶schen", <%= singular_name %> %></td>
    <%- end -%>
    </tr>
  <%% end %>
</table>

<%- if action? :new -%>
<p><%%= link_to "<%= singular_name.titleize %> anlegen", new_<%= singular_name %>_path %></p>
<%- end -%>
